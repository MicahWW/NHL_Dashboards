<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NHL Dashboards</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Black+Ops+One&display=swap" rel="stylesheet">
    <script src="/js/resizeText.js"></script>
    <link rel="stylesheet" type="text/css" href="/css/@(ViewData["CssFileName"])" />
    <link rel="stylesheet" type="text/css" href="/css/dashboard.css" />
    <script src="/js/@(ViewData["JsFileName"])"></script>
</head>
<body>
    <div id="title">
        <img src="@(ViewData["Logo"])">
        <div class="resize-text">@ViewData["Title"]</div>
    </div>
    <main>
        @RenderBody()
    </main>
</body>
</html>